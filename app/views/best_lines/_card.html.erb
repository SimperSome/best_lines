<div class="card mb-3">
  <h2 class="card-header h4">
    Best Line #<%= best_line.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Image</dt>
      <dd>
        <%= cl_image_tag @best_line.image, class: "img-fluid" %>
      </dd>

      <dt>Book</dt>
      <dd>
        <% if @best_line.book.present? %>
          <%= link_to best_line.book, best_line.book %>
        <% end %>
      </dd>

      <dt>Page</dt>
      <dd><%= best_line.page %></dd>

      <dt>Notes</dt>
      <dd><%= best_line.notes %></dd>

      <dt>Category</dt>
      <dd>
        <% if @best_line.category.present? %>
          <%= link_to best_line.category, best_line.category %>
        <% end %>
      </dd>

      <dt>User</dt>
      <dd>
        <% if @best_line.user.present? %>
          <%= link_to best_line.user, best_line.user %>
        <% end %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back best_line, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_best_line_url(best_line), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to best_line, method: :delete, data: { confirm: "Do you really want to delete this best_line?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(best_line.updated_at) %> ago
  </div>
</div>
