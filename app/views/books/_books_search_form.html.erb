<%= search_form_for @q, :class => collapse_search_form, :id => "books_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :name_cont, "Name contains" %>
    <%= f.text_field :name_cont, :class => "form-control", :placeholder => "Name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :publishing_year, "Publishing year" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :publishing_year_gteq, :class => "form-control", :placeholder => "Publishing year greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :publishing_year_lteq, :class => "form-control", :placeholder => "Publishing year less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :author_name_cont, "Author name contains" %>
    <%= f.text_field :author_name_cont, :class => "form-control", :placeholder => "Author name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "BestLine Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='best_linesgteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :best_lines_created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "BestLine Created at greater than or equal to", :data => {:target => '#best_linesgteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#best_linesgteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='best_lineslteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :best_lines_created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "BestLine Created at less than or equal to", :data => {:target => '#best_lineslteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#best_lineslteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#best_linesgteqcreated_atPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#best_lineslteqcreated_atPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#best_linesgteqcreated_atPicker').on("dp.change", function (e) {
              $('#best_lineslteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#best_lineslteqcreated_atPicker').on("dp.change", function (e) {
              $('#best_linesgteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>

  <div class="form-group">
    <%= f.label :user_email_cont, "User email contains" %>
    <%= f.text_field :user_email_cont, :class => "form-control", :placeholder => "User email contains" %>
  </div>

  <div class="form-group">
    <%= f.label :categories_category_name_cont, "Categories category_name contains" %>
    <%= f.text_field :categories_category_name_cont, :class => "form-control", :placeholder => "Categories category_name contains" %>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/books" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#books_filters">
  Show filters
</a>
