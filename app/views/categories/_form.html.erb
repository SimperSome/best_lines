<% was_validated = category.errors.any? %>

<%= form_with(model: category, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% category_name_class = "form-control" %>
    <% category_name_was_invalid = category.errors.include?(:category_name) %>

    <% if was_validated %>
      <% if category_name_was_invalid %>
        <% category_name_class << " is-invalid" %>
      <% else %>
        <% category_name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :category_name %>
    <%= f.text_field :category_name, class: category_name_class, placeholder: "Enter category name" %>
    <% if category_name_was_invalid %>
      <% category.errors.full_messages_for(:category_name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% user_class = "form-control" %>
    <% user_was_invalid = category.errors.include?(:user) %>

    <% if was_validated %>
      <% if user_was_invalid %>
        <% user_class << " is-invalid" %>
      <% else %>
        <% user_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :user_id %>
    <%= f.number_field :user_id, class: user_class, placeholder: "Enter user" %>
    <% if user_was_invalid %>
      <% category.errors.full_messages_for(:user).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
