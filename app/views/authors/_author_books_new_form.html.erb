<%= form_with(model: @book, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :name %>

    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :publishing_year %>

    <%= f.text_field :publishing_year, class: "form-control" %>
  </div>

  <%= f.hidden_field :author_id, value: @author.id %>

  <%= f.submit "Create book", class: "btn btn-block btn-outline-secondary" %>
<% end %>
