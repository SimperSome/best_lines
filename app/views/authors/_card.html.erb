<div class="card mb-3">
  <h2 class="card-header h4">
    Author #<%= author.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Name</dt>
      <dd><%= author.name %></dd>

      <dt>Year of birth</dt>
      <dd><%= author.year_of_birth %></dd>

      <dt>Bio</dt>
      <dd><%= author.bio %></dd>

      <dt>Image</dt>
      <dd>
        <%= cl_image_tag @author.image, class: "img-fluid" %>
      </dd>

      <dt>User</dt>
      <dd>
        <% if @author.user.present? %>
          <%= link_to author.user, author.user %>
        <% end %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back author, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <% if current_user == @author.user %>
          <%= link_to edit_author_url(author), class: "btn btn-block btn-sm btn-outline-secondary" do %>
            <i class="fas fa-edit"></i>
          <% end %>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @author.user %>
          <%= link_to author, method: :delete, data: { confirm: "Do you really want to delete this author?" }, class: "btn btn-block btn-outline-secondary" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(author.updated_at) %> ago
  </div>
</div>
