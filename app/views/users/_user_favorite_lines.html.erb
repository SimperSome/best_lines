<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Favorite Lines

    <a data-toggle="collapse" href="#user_favorite_lines_new_form">
      Add best line
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.favorite_lines.each do |best_line| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to best_line, best_line %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_favorite_lines_new_form">
        <%= render partial: "users/user_favorite_lines_new_form" %>
      </div>
    </div>

  </ul>
</div>
