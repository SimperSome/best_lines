<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Reading List

    <a data-toggle="collapse" href="#user_reading_list_new_form">
      Add book
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.reading_list.each do |book| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to book, book %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_reading_list_new_form">
        <%= render partial: "users/user_reading_list_new_form" %>
      </div>
    </div>

  </ul>
</div>
